{
  "name": "claimscrub",
  "private": true,
  "version": "0.1.0",
  "description": "Pre-Submission Claim Scrubber PWA - Prevent denials before they happen",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "format": "biome format --write .",
    "check": "biome check .",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "db:generate": "pnpm --filter @claimscrub/api db:generate",
    "db:push": "pnpm --filter @claimscrub/api db:push",
    "db:migrate": "pnpm --filter @claimscrub/api db:migrate",
    "db:studio": "pnpm --filter @claimscrub/api db:studio",
    "storybook": "pnpm --filter @claimscrub/ui storybook",
    "clean": "turbo clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "turbo": "^2.3.3",
    "typescript": "^5.4.5"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}
